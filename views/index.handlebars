<!DOCTYPE html>
<html lang="en">
<head>
</head>
						
<div class="panel panel-primary">
  <div class="panel-heading">
    <h3 class="panel-title">Ready to Eat</h3>
  </div>
  <div class="panel-body">

   {{#each burgers}}
   	{{#unless devoured}}
	 {{burger_name}}

    var newDevourBtn = $("<button>");
    newDevourBtn.addClass("devour btn btn-default");
    newDevourBtn.text("Devour");
    newDevourBtn.data("id", burger.id);
   
   <br>
	{{/unless}}
{{/each}}

  </div>


 <div class="panel panel-primary">
  <div class="panel-heading">
    <h3 class="panel-title">Devoured</h3>
  </div>
  <div class="panel-body">
 

   {{#each burgers}}
   	{{#if devoured}}
	{{burger_name}},  <br>
	{{/if}}
{{/each}}

  </div>





</div>


<form action="/users/create" method="POST">
  <input type="text" name="burger" placeholder="place your burger order here"></input>
  <input type="submit"></input>
</form>
